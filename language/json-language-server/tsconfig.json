{
  "include": ["src/**/*", "../../typings/**/*"],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "lib": ["es6", "es2017", "esnext", "dom"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": false,
    "incremental": false
  }
}
